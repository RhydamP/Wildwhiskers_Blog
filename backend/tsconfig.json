{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "types": ["node"]
  },
  "include": ["server.ts", "routes/**/*", "prisma/**/*", "types"],
  "exclude": ["dist", "node_modules"],
  "ts-node": {
    "esm": true
  }
}
